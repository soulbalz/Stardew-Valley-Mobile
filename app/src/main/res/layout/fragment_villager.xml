<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomFragment.VillagerFragment">

    <!-- A RecyclerView with some commonly used attributes -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="?android:listSeparatorTextViewStyle">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/icon_villager"
                    android:src="@drawable/ic_polymer"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/txt_villager_name"
                    android:layout_gravity="right|top"
                    android:layout_alignTop="@+id/icon_villager"
                    android:layout_toEndOf="@+id/icon_villager" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/txt_villager_bithday"
                    android:layout_centerVertical="true"
                    android:layout_alignStart="@+id/txt_villager_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/txt_villager_marrige"
                    android:layout_alignBottom="@+id/icon_villager"
                    android:layout_alignStart="@+id/txt_villager_name" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ประวัติตัวละคร"
                android:id="@+id/textView1"
                android:padding="10dp"
                style="?android:listSeparatorTextViewStyle"
                android:paddingLeft="5dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txt_villager_detail"
                android:lineSpacingMultiplier="1.5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BEST GIFT"
                android:id="@+id/textView4"
                android:autoText="false"
                android:padding="10dp"
                style="?android:listSeparatorTextViewStyle"
                android:paddingLeft="5dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txt_best_gift"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:lineSpacingMultiplier="1.5" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/giftBestRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GOOD GIFT"
                android:id="@+id/textView5"
                android:autoText="false"
                android:padding="10dp"
                style="?android:listSeparatorTextViewStyle"
                android:paddingLeft="5dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txt_good_gift"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:lineSpacingMultiplier="1.5" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/giftGoodRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEUTRAL GIFT"
                android:id="@+id/textView6"
                android:autoText="false"
                android:padding="10dp"
                style="?android:listSeparatorTextViewStyle"
                android:paddingLeft="5dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txt_neutral_gift"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:lineSpacingMultiplier="1.5" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/giftNeutralRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BAD GIFT"
                android:id="@+id/textView7"
                android:autoText="false"
                android:padding="10dp"
                style="?android:listSeparatorTextViewStyle"
                android:paddingLeft="5dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txt_bad_gift"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:lineSpacingMultiplier="1.5" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/giftBadRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WORST GIFT"
                android:id="@+id/textView8"
                android:autoText="false"
                android:padding="10dp"
                style="?android:listSeparatorTextViewStyle"
                android:paddingLeft="5dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txt_worst_gift"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:lineSpacingMultiplier="1.5" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/giftWorstRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heart Events (เหตุการณ์ที่จะเกิดเมื่อหัวใจเพิ่มขึ้น)"
                android:id="@+id/textView3"
                android:autoText="false"
                android:padding="10dp"
                style="?android:listSeparatorTextViewStyle"
                android:paddingLeft="5dp"
                android:layout_marginBottom="5dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        ads:adUnitId="ca-app-pub-4867361913989793/8655196069"
        ads:adSize="SMART_BANNER"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
