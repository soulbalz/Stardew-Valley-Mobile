<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:layout_gravity="center">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/icon_villager_item"
                android:src="@drawable/ic_polymer"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/txt_villager_gift_name"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/icon_villager_item"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp" />

            <TextView
                android:id="@+id/txt_villager_gift_found_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="txt View"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/txt_villager_gift_name"
                android:layout_marginTop="60dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>